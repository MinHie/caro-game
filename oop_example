import pygame

class Board:
    def __init__(self):
        self.board = [[None] * 15 for _ in range(15)]  # Mảng 2D đại diện cho bảng cờ

    def draw(self, screen):
        # Vẽ bảng cờ lên màn hình
        # ...

    def mark(self, row, col, player):
        # Đánh dấu ô cờ với người chơi hiện tại
        # ...

class Player:
    def __init__(self, name, symbol):
        self.name = name
        self.symbol = symbol

    def select_move(self):
        # Xử lý sự kiện chọn ô cờ để đánh
        # ...

class Game:
    def __init__(self, player1, player2):
        self.board = Board()
        self.players = [player1, player2]
        self.current_player = 0

    def run(self):
        pygame.init()
        screen = pygame.display.set_mode((800, 600))
        pygame.display.set_caption("Caro Game")

        while True:
            # Xử lý các sự kiện
            for event in pygame.event.get():
                if event.type == pygame.QUIT:
                    pygame.quit()
                    return

                if event.type == pygame.MOUSEBUTTONDOWN:
                    if self.current_player == 0:
                        move = self.players[self.current_player].select_move()
                        self.board.mark(move[0], move[1], self.players[self.current_player].symbol)
                        # Kiểm tra điều kiện thắng và kết thúc trò chơi nếu cần

            # Vẽ trạng thái hiện tại lên màn hình
            self.board.draw(screen)
            pygame.display.flip()

            self.current_player = (self.current_player + 1) % 2

